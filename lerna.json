{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "command": {
    "version": {
      "allowBranch": "release",
      "conventionalCommits": true,
      "noCommitHooks": true,
      "message": "build(release): version %s"
    }
  }
}

{
  "name": "local-mock-core",
  "private": true,
  "author": "redstar08",
  "license": "MIT",
  "homepage": "https://github.com/redstar08/local-mock-core",
  "repository": "https://github.com/redstar08/local-mock-core",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "prepub": "npm run check-git",
    "pub": "node scripts/publish.js",
    "lint": "eslint --cache --fix packages",
    "prettier": "prettier --write src",
    "lint-staged": "lint-staged",
    "check-git": "node scripts/check-git.js",
    "commitlint": "commitlint --config commitlint.config.js -e -V",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "createlog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,html,css,scss,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=14.20.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "chalk": "^5.1.2",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^8.0.1",
    "lerna": "^6.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "simple-git": "^3.15.0"
  }
}
